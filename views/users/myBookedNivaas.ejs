<% layout("/layouts/boilerplate.ejs") %>
<div class="container">
  <h2 class="mb-4 mt-5" data-aos="fade-right">
    My <span class="samarkan-font text-danger-emphasis">Booked Nivaas</span>
  </h2>

  <% if (!user.userBooking || user.userBooking.length === 0) { %>
  <div class="col-8 offset-2" data-aos="fade-right">
    <div class="alert alert-info text-center">
      <h5>No bookings yet!</h5>
      <p>
        You haven't booked any Nivaas yet.
        <a href="/listing">Browse Nivaas</a> to get started.
      </p>
    </div>
  </div>
  <% } else { %>
  <div class="row" data-aos="fade-right">
    <% user.userBooking.forEach(booking => { %>
    <div class="col-md-4 mb-4">
      <div class="card listing-card h-100">
        <img
          src="<%= booking.listing.image %>"
          class="card-img-top listing-image"
          alt="<%= booking.listing.title %>"
        />
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">
            <a
              href="/listing/<%= booking.listing._id %>/show"
              class="text-decoration-none"
            >
              <%= booking.listing.title %>
            </a>
          </h5>
          <p class="card-text mb-1">
            <strong
              >Total Price: ₹<%= booking.price.toLocaleString("en-IN")
              %></strong
            >
            <small class="text-muted">
              (₹<%= booking.listing.price.toLocaleString("en-IN") %>/night)
            </small>
          </p>
          <p class="card-text">
            <small class="text-muted">
              <i class="fas fa-map-marker-alt"></i> <%= booking.listing.location
              %>
            </small>
          </p>
          <!-- Add booking details -->
          <div class="mt-auto">
            <p class="card-text">
              <small class="text-muted">
                Check-in: <%= booking.checkin %><br />
                Check-out: <%= booking.checkout %><br />
                Guests: <%= booking.adults + booking.children %>
              </small>
            </p>
            <!-- Add Edit and Cancel buttons -->
            <div class="d-flex gap-2 mt-3">
              <a
                href="/booking/<%= booking._id %>/edit"
                class="btn btn-sm btn-outline-primary"
              >
                <i class="fas fa-edit"></i> Edit
              </a>
              <form
                action="/user/booking/<%= booking._id %>?_method=DELETE"
                method="POST"
                class="d-inline"
              >
                <button type="submit" class="btn btn-sm btn-outline-danger">
                  <i class="fas fa-times"></i> Cancel
                </button>
              </form>
            </div>
            <div
              class="confirm-overlay"
              id="confirm-delete-overlay"
              style="display: none"
            >
              <div class="confirm-delete-box" data-aos="zoom-in">
                <h4>Confirm Delete</h4>
                <p>Are you sure you want to delete this Nivaas?</p>
                <div class="confirm-buttons d-flex justify-content-evenly">
                  <form
                    action="/user/booking/<%= booking._id %>?_method=DELETE"
                    method="POST"
                  >
                    <button type="submit" class="btn btn-danger confirm">
                      Yes, Delete
                    </button>
                  </form>
                  <button type="button" class="btn btn-secondary cancel">
                    Cancel
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
  <% } %>
</div>

<% layout("/layouts/boilerplate.ejs") %>
<div class="container-new mt-3">
    <h1 class="text-center mb-3 text-capitalize">Create a New Listing</h1>
    <p class="text-center fw-medium fs-5">Fill in the details below to create a new listing.</p>
    <form action="/Listing" method="post">
        <label for="title" class="form-label">Title:</label>
        <input type="text" class="form-control mb-2 border-dark-subtle" id="title" name="title" required>
        <label for="description" class="form-label">Description:</label>
        <textarea id="description" name="description" rows="3" cols="10" class="form-control mb-2 border-dark-subtle" required></textarea>
        <label for="image" class="form-label">Image URL:</label>
        <input type="url" id="image" name="image" class="form-control mb-2 border-dark-subtle">
        <div class="row mb-2">
            <div class="col-md-4">
                <label for="price" class="form-label">Price:</label>
                <input type="number" class="form-control border-dark-subtle" id="price" name="price" required>
            </div>
            <div class="col-md-8">
                <label for="location" class="form-label">Location:</label>
                <input type="text" id="location" class="form-control border-dark-subtle" name="location" required>
            </div>
        </div>
        <label for="country" class="form-label">Country:</label>
        <input type="text" id="country" name="country" class="form-control mb-4 border-dark-subtle" required>
        <button type="submit" class="btn bg-info-subtle border-info text-info-emphansis">Create Listing</button>
    </form> 
</div>
   
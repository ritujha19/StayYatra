<% layout("/layouts/boilerplate.ejs") %>
<body>
    <h3 class="text-center text-uppercase mb-4 mt-4">edit the listing</h3>
    <div class="container" style="max-width: 60%; margin: 0 auto;">
        <form action="/listing/<%= listing._id %>?_method=PUT" method="post">
            <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input type="text" id="title" name="listing[title]" value="<%= listing.title %>" class="form-control border-black rounded-3" required>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description:</label>
                <textarea class="form-control border-black rounded-3" id="description" name="listing[description]" required><%= listing.description %></textarea>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Image URL:</label>
                <input type="text" id="image" name="listing[image]" value="<%= listing.image %>" class="form-control border-black rounded-3" required>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="price" class="form-label">Price:</label>
                    <input type="number" id="price" class="form-control border-black rounded-3" name="listing[price]" value="<%= listing.price %>" required>
                </div>
                <div class="col-md-8">
                    <label for="location" class="form-label">Location:</label>
                    <input type="text" class="form-control border-black rounded-3" id="location" name="listing[location]" value="<%= listing.location %>" required>
                </div>
            </div>

            <div class="mb-3">
                <label for="country" class="form-label">Country:</label>
                <input type="text" id="country" class="form-control border-black rounded-3" name="listing[country]" value="<%= listing.country %>" required>
            </div>

            <button type="submit" class="btn btn-outline-success">Update</button>
        </form>
    </div>
</body>
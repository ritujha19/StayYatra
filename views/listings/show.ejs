<% layout("/layouts/boilerplate.ejs") %>
<div class="container-show col-8 offset-4 mt-5 mb-5">
    <div class="card show-card" style="width: 25rem">
        <h4 class="card-title mb-3"><%= listing.title %></h4>
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing image" style="height: 200px; object-fit: cover;">
        <div class="card-body">
            <p class="card-text"><%= listing.description %></p>
            <p class="card-text">Price: &#8377; <%= listing.price.toLocaleString("en-IN") %></p>
            <p class="card-text">Location: <%= listing.location %></p>
            <p class="card-text">Country: <%= listing.country %></p>
            <div class="btns d-flex justify-content-evenly">
                <a href="/listing/<%= listing._id %>/edit" class="btn btn-outline-success bg-success-subtle text-success-emphasis">Edit</a>
                <form class="d-inline" action="/listing/<%= listing._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-outline-danger bg-danger-subtle text-danger-emphasis delete-btn">Delete</button>
                </form>
            </div>
        
            <div class="confirm-delete" style="display: none;">
                <div class="confirm-box">
                    <h4>Confirm Deletion</h4>
                    <p>Are you sure you want to delete this listing?</p>
                    <div class="confirm-buttons">
                        <form action="/listing/<%= listing._id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger btn-sm confirm">Yes, Delete</button>
                        </form>
                        <button class="btn btn-secondary cancel">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr>
<!-- create form for reviews -->
<div class="container-review mt-5 col-8 offset-3">
    <h4>Leave A Review</h4>
    <br><br>
    <form action="/listing/<%= listing._id %>/review" method="post" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" class="form-range" id="rating" name="review[rating]" min="1" max="5" step="1" value="3">
        </div>
        <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea class="form-control border-dark" id="comment" name="review[comment]"  cols="3" rows="3" placeholder="write something about place" required></textarea>
        </div>
        <button type="submit" class="btn btn-outline-primary">Submit Review</button>
    </form>    
</div>  

<hr>
<h4 class="offset-3">All Reviews</h4>
<% if (listing.reviews.length === 0) { %>
    <p>No reviews yet.</p>
<% } else { %>
    <div class="row offset-2">
        <% for(let review of listing.reviews) { %>
            <div class="reviews-card mb-1 col-5 ms-5 ">
                <div class="card review-card">
                    <div class="card-body">
                            <h5 class="card-title">
                                <% if (review.author) { %>
                                <%= review.author.username %>
                                <% } else { %>
                                Unknown user
                                <% } %>
                            </h5>
                        <p class="card-text">
                            <%= review.rating %>
                            <% for(let i = 1; i <= review.rating; i++) { %>
                                ‚≠ê
                            <% } %> 
                        </p>
                        <p class="card-text"><%= review.comment %></p>
                    <form action="/listing/<%= listing._id %>/review/<%= review._id %>?_method=DELETE" method="POST" class="d-inline review-delete-form">
                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete Review</button>
                    </form>
                    </div>
                </div>
            </div>
        <% } %>    
    </div>
<% } %>
<div class="review-confirm-delete" style="display: none;">
    <div class="confirm-box">
        <h4>Delete Review</h4>
        <p>Are you sure you want to delete this review?</p>
        <div class="confirm-buttons">
            <button class="btn btn-danger btn-sm confirm-review-delete">Delete</button>
            <button class="btn btn-secondary btn-sm cancel-review-delete">Cancel</button>
        </div>
    </div>
</div>